{
  "version": 2,
  "builds": [
    {
      "src": "api/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"],
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/src/main.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}